# Git stuff
alias g='git status'
alias gl='git log --oneline'
alias git-add-remote-refs='git config remote.origin.fetch "+refs/heads/*:refs/remotes/origin/*" && git fetch -Ppaf'

# Utils
alias vim='nvim'
alias list_npm_scripts='jq .scripts package.json'

# Worktrees control
alias lw='$(choose-worktree.sh | windowize-worktree.sh)'
alias slw='$(choose-worktree.sh | sessionize-worktree.sh)'
